{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./", 
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",         
    "entity/**/*.ts",       
    "jobs/**/*.ts",         
    "data-source.ts",       
    "index.ts",             
    "middleware/**/*.ts",   
    "routes/**/*.ts"        
  ],
  "exclude": ["node_modules", "dist"]
}